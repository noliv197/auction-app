<section class='itemDescriptionContainer'>
    <div>
        <h1 class='textTitle'><%= ItemModel.human_attribute_name('code')%>: <%=@item_model.code%></h1>
        <%if @item_model.image.attached?%>
            <%=image_tag @item_model.image, alt: @item_model.name%>
        <%else%>
            <%=image_tag "no_image_available.jpg", alt: 'Nenhuma imagem fornecida'%>
        <%end%>
    </div>
    <div class='descriptionContainer'>
        <span class='textDescription'>
            <%=ItemModel.human_attribute_name('name')%>: <%=@item_model.name%>
        </span>
        <span class='textDescription'>
            <%=ItemModel.human_attribute_name('category')%>: <%=@item_model.category%>
        </span>
        <span class='textDescription'>
            <%=ItemModel.human_attribute_name('weight')%>: <%=@item_model.weight%>g
        </span>
        <span class='textDescription'>
            <%=I18n.translate(:dimension)%>: <%=@item_model.dimension%>
        </span>
        <span class='textDescription'>
            <%=ItemModel.human_attribute_name('description')%>: <%=@item_model.description%>
        </span>
    </div>
</section>